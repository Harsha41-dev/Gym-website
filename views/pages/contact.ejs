<%- include('../partials/header') %>

<main>
  <section class="py-5">
    <div class="container">
      <h1 class="text-center text-danger mb-5">Contact Us</h1>
      <div class="row">
        <div class="col-md-6 mb-4">
          <h3 class="text-danger">Our Location</h3>
          <p class="text-light">Visit us at our gym or reach out to us through our contact form. We're here to help you achieve your fitness goals!</p>
          <div class="embed-responsive embed-responsive-16by9 mb-4" style="height: 300px;">
            <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.019287508227!2d144.9631579153167!3d-37.8141079797517!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf577d1f9e1e5e1e9!2s123%20Fitness%20St%2C%20Gym%20City!5e0!3m2!1sen!2sau!4v1614311234567!5m2!1sen!2sau" allowfullscreen style="width: 100%; height: 100%;"></iframe>
          </div>
          <h3 class="text-danger">Operating Hours</h3>
          <ul class="list-unstyled text-light">
            <li>Monday - Friday: 6:00 AM - 10:00 PM</li>
            <li>Saturday: 8:00 AM - 8:00 PM</li>
            <li>Sunday: 8:00 AM - 6:00 PM</li>
          </ul>
        </div>
        <div class="col-md-6">
          <h3 class="text-danger">Send Us a Message</h3>
          <form action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label text-light">Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label text-light">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label text-light">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-danger">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>