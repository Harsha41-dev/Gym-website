<%- include('../partials/header') %>

<div class="container my-5">
  <h2 class="text-danger">Book a Training Session</h2>
  <form action="/user/booking" method="POST">
    <div class="mb-3">
      <label for="trainerId" class="form-label text-white">Trainer ID</label>
      <input type="text" class="form-control" name="trainerId" id="trainerId" required>
    </div>
    <div class="mb-3">
      <label for="date" class="form-label text-white">Date</label>
      <input type="date" class="form-control" name="date" id="date" required>
    </div>
    <div class="mb-3">
      <label for="timeSlot" class="form-label text-white">Time Slot</label>
      <input type="text" class="form-control" name="timeSlot" id="timeSlot" placeholder="e.g. 10:00 AM - 11:00 AM" required>
    </div>
    <button type="submit" class="btn btn-danger">Book</button>
  </form>
</div>

<%- include('../partials/footer') %>
